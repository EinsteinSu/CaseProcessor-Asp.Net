@model IEnumerable<CaseProcessor.DataAccess.Models.Activity>

<p>
    @Html.ActionLink("Create New", "Create", "Activities", new { caseId = ViewData["CaseId"] }, new { @class = "btn btn-primary" })
</p>
<ul class="list-group">
    @foreach (var item in Model)
    {
        <li class="list-group-item">
            @Html.DisplayFor(modelItem => item.Content)
            @Html.DisplayFor(modelItem => item.Time)
            @Html.ActionLink("Edit", "Edit", "Activities", new { id = item.ActivityId }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Delete", "Delete", "Activities", new { id = item.ActivityId }, new { @class = "btn btn-primary" })
        </li>
    }

</ul>
